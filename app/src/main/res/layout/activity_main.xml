<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <com.shuhart.stepview.StepView
        android:id="@+id/step_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:sv_animationType="All"
        app:sv_stepPadding="5dp"
        app:sv_steps="@array/count"
        android:background="@color/colorPrimaryDark1"
        app:sv_stepLineWidth="10dp"
        app:sv_nextTextColor="@color/cardview_dark_background"
        app:sv_nextStepLineColor="@color/cardview_dark_background"/>

    <!--<com.shuhart.stepview.StepView
        android:background="@color/colorPrimaryDark1"
        android:id="@+id/step_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:sv_selectedCircleColor="@color/colorAccent1"
        app:sv_selectedTextColor="@color/black"
        app:sv_stepLineWidth="4dp"
        app:sv_stepPadding="4dp"
        app:sv_nextTextColor="@color/colorAccent"
        app:sv_nextStepLineColor="@color/colorAccent"
        app:sv_doneCircleColor="@color/colorAccent"
        app:sv_doneStepLineColor="@color/colorAccent"
        app:sv_doneCircleRadius="40dp"
        app:sv_selectedCircleRadius="30dp"
        app:sv_selectedStepNumberColor="@color/colorPrimary"
